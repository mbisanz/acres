<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>README.md</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/sql</directory>
			<outputDirectory>sql</outputDirectory>
			<includes>
				<include>**/*.sql</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet><!-- deployments -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.acres:acres-ear:ear</include>
				<include>com.prodyna.pac.acres:acres-web:war</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/deployments</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet><!-- sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.acres:*</include>
			</includes>
			<excludes>
				<exclude>com.prodyna.pac.acres:acres-test</exclude>
				<exclude>com.prodyna.pac.acres:acres-ear</exclude>
				<exclude>com.prodyna.pac.acres:acres-web</exclude>
				<exclude>com.prodyna.pac.acres:acres-dist</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>sources</attachmentClassifier>
				<outputDirectory>/sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet><!-- test sources -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.acres:*</include>
			</includes>
			<excludes>
				<exclude>com.prodyna.pac.acres:acres-ear</exclude>
				<exclude>com.prodyna.pac.acres:acres-web</exclude>
				<exclude>com.prodyna.pac.acres:acres-dist</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>test-sources</attachmentClassifier>
				<outputDirectory>/test-sources</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet><!-- javadoc -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.acres:*</include>
			</includes>
			<excludes>
				<exclude>com.prodyna.pac.acres:acres-test</exclude>
				<exclude>com.prodyna.pac.acres:acres-ear</exclude>
				<exclude>com.prodyna.pac.acres:acres-web</exclude>
				<exclude>com.prodyna.pac.acres:acres-dist</exclude>
			</excludes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<outputDirectory>/javadoc</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet><!-- test reports -->
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.prodyna.pac.acres:*</include>
			</includes>
			<excludes>
				<exclude>com.prodyna.pac.acres:acres-ear</exclude>
				<exclude>com.prodyna.pac.acres:acres-web</exclude>
				<exclude>com.prodyna.pac.acres:acres-dist</exclude>
			</excludes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>test-reports/${module.artifactId}</outputDirectory>
						<directory>target/surefire-reports</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>
